datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Document {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  summaries Summary[]
}

model Summary {
  id         String   @id @default(uuid())
  type       SummaryType
  content    String
  createdAt  DateTime @default(now())

  document   Document @relation(fields: [documentId], references: [id])
  documentId String
}

enum SummaryType {
  SHORT
  LONG
}